@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;
@inject UserManager<IdentityUser> UserManager;


<ul class="navbar-nav ml-auto">ig
    @if(SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" href="">Bienvenido, @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="cerrarSesionForm" method="post" class="form-inline" asp-controller="Cuentas" asp-action="CerrarSesion">
                <button type="submit" class="btn nav-link">Salir</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Acceso">Acceso</a>
        </li>
    }

</ul>